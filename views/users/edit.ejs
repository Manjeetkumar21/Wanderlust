<%- layout('/layouts/boilerplate') %>

  <section class="d-flex justify-content-center align-items-center">
    <div class="mt-3 login-signup">
      <div class="mb-5">
        <h3 class="mb-3 text-center">Update Your Profile</h3>
        <form action="/profile/edit" method="POST" enctype="multipart/form-data" novalidate class="needs-validation">
          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input
              type="text"
              name="name"
              id="name"
              value="<%= currentUser.name %>"
              class="form-control"
              maxlength="50"
              required
            />
            <div class="valid-feedback">Name looks good!</div>
            <div class="invalid-feedback">Please enter the name</div>
          </div>
          
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input
              type="text"
              name="username"
              id="username"
              value="<%= currentUser.username %>"
              class="form-control"
              maxlength="100"
              onkeydown="return /[a-zA-Z0-9_. ]/i.test(event.key)"
              required
            />
            <div class="valid-feedback">Username looks good!</div>
            <div class="invalid-feedback">Please enter the username!</div>
          </div>
  
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              type="email"
              name="email"
              id="email"
              value="<%= currentUser.email %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter the valid email!</div>
          </div>

          <div class="mb-3">
            <label for="image" class="form-label">Profile Picture</label>
            <input type="file" name="image" class="form-control" />
          </div>
  
  
          <button class="btn btn-dark signup-btn">UPDATE</button>
        </form>
      </div>
    </div>
  </section>

